                            <div class="product-title">Product Title</div>
                            <div class="product-price">80php</div>
                            <div class="card-hover-icons">
                                <div class="icon-container">
                                    <div class="icon"><img src="assets/icons/overview.svg" alt=""></div>
                                    <div class="icon"><img src="assets/icons/addtocart.svg" alt=""></div>
                                </div>
                                <div class="available-size-container">100g | 500g | 1000g</div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="product-image"><img src="assets/product-image/product_sample.png" alt=""></div>
                            <div class="product-title">Product Title</div>
                            <div class="product-price">80php</div>
                            <div class="card-hover-icons">
                                <div class="icon-container">
                                    <div class="icon"><img src="assets/icons/overview.svg" alt=""></div>
                                    <div class="icon"><img src="assets/icons/addtocart.svg" alt=""></div>
                                </div>
                                <div class="available-size-container">100g | 500g | 1000g</div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="product-image"><img src="assets/product-image/product_sample.png" alt=""></div>
                            <div class="product-title">Product Title</div>
                            <div class="product-price">80php</div>
                            <div class="card-hover-icons">
                                <div class="icon-container">
                                    <div class="icon"><img src="assets/icons/overview.svg" alt=""></div>
                                    <div class="icon"><img src="assets/icons/addtocart.svg" alt=""></div>
                                </div>
                                <div class="available-size-container">100g | 500g | 1000g</div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="product-image"><img src="assets/product-image/product_sample.png" alt=""></div>
                            <div class="product-title">Product Title</div>
                            <div class="product-price">80php</div>
                            <div class="card-hover-icons">
                                <div class="icon-container">
                                    <div class="icon"><img src="assets/icons/overview.svg" alt=""></div>
                                    <div class="icon"><img src="assets/icons/addtocart.svg" alt=""></div>
                                </div>
                                <div class="available-size-container">100g | 500g | 1000g</div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-wide product">VIEW ALL PRODUCT</button>
                </div>
            </div>
        </div>
    </section>
    <%- include('./partials/footer'); %>
</body>
</html>